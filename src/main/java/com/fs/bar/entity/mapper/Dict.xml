<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.etsk.api.entity.domain.Dict">
<resultMap type="com.fs.bar.entity.Dict" id="Dict">
      <id column="name" property="name"/>
      <id column="value" property="value"/>
      <id column="status" property="status"/>
      <id column="parent_name" property="parentName"/>
</resultMap><!--接口说明:新增dict数据-->
<insert id="save" parameterType="Dict">
	insert into dict(name,value,status,parent_name)values(#{name},#{value},#{status},#{parentName})
</insert>

<!--接口说明:修改dict数据-->
<update id="update" parameterType="Dict">
	update dict set name=#{name},value=#{value},status=#{status},parent_name=#{parentName} WHERE ID=#{id}
</update>

<!--接口说明:删除dict数据-->
<delete id="deleteById" parameterType="int"> 
	delete from TEACHER where ID=#{id}
</delete>

<!--根据map参数查询dict数据-->
<select id="findOneByMap" parameterType="java.util.Map" resultMap="Dict">
	select a.* from dict a where 1=1 
	limit 0,1 
</select>

<!--根据map参数查询dict数据-->
<select id="findByMap" parameterType="java.util.Map" resultMap="Dict">
	select * from dict  where 1=1 
<if test="name!=null and name!=''">
    and name=#{name} 
</if>
<if test="value!=null and value!=''">
    and value=#{value} 
</if>
<if test="status!=null and status!=''">
    and status=#{status} 
</if>
<if test="parentName!=null and parentName!=''">
    and parent_name=#{parentName} 
</if>
</select>

<!--查询所有dict数据-->
<select id="findAll" resultMap="Dict">
	select * from dict 
</select>

<!--根据条件查询dict表数据-->
<select id="queryCount" parameterType="java.util.Map" resultType="int">
	select count(1) from dict  where 1=1  
</select>


</mapper>